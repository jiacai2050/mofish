<%
    // https://core.telegram.org/bots/api#markdownv2-style
    function normalize(title) {
      return title.replace(/([-_*\[\]()~`>#+=|{}.!])/g, "\\$1");
    }

    for(let post of hn_posts.slice(0, 3)) {
      let title = normalize(post.title);
%>
[<%- title %>](<%- post.url %>) <%= post.score %> points [<%= post.descendants %> comments](https://news.ycombinator.com/item?id=<%= post.id %>)
<%  }  %>

__V2EX__
<%  for(let post of v2ex_posts.slice(0, 5)) {
      let title = normalize(post.title);
%>
[<%- title %>](<%- post.url %>) in <%= normalize(post.node) %>
<%  }  %>
